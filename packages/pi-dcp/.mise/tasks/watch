#!/usr/bin/env bash
#MISE description="Watch mode for plugin development with sourcemaps and vendor splitting"
#MISE watch=["src/**/*"]

bun build ./src/index.ts \
  --outdir dist \
  --target bun \
  --sourcemap=inline \
  --splitting \
  --entry-naming='[dir]/[name].js' \
  --chunk-naming='[name].js' \
  --watch
