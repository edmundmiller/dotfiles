{ config, lib, pkgs, ... }:

{
  services.autorandr = {
    enable = true;
    defaultTarget = "main";
  };

  home-manager.users.emiller.programs.autorandr = {
    enable = true;
    hooks = {
      postswitch = {
        # "change-background" = readFile ./change-background.sh;
        "change-dpi" = ''
          case "$AUTORANDR_CURRENT_PROFILE" in
            mobile)
              DPI=196
              MONITOR="eDP-1"
              NEW_GDK_SCALE=2
              NEW_GDK_DPI_SCALE=0.5
              ;;
            lab)
              DPI=192
              MONITOR="DP-2-1"
              NEW_GDK_SCALE=2
              NEW_GDK_DPI_SCALE=0.5
              ;;
            home)
              DPI=192
              MONITOR="DP-3-3"
              NEW_GDK_SCALE=2
              NEW_GDK_DPI_SCALE=0.5
              ;;
            *)
              echo "Unknown profle: $AUTORANDR_CURRENT_PROFILE"
              exit 1
          esac

          echo "Xft.dpi: $DPI" | ${pkgs.xorg.xrdb}/bin/xrdb -merge
          export GDK_SCALE=$NEW_GDK_SCALE
          export GDK_DPI_SCALE=$NEW_GDK_DPI_SCALE

          source ~/.config/bspwm/bspwmrc
          for file in $XDG_CONFIG_HOME/bspwm/rc.d/*; do
            source "$file"
          done
        '';
        "wallpaper" =
          "feh --bg-scale /etc/nixos/modules/themes/functional/config/wallpaper.png";
        "polybar" = "~/.config/polybar/run.sh";
      };
    };
    profiles = {
