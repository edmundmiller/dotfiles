{
  "$schema": "https://pi.ai/settings.json",

  // Model configuration - Opus as default, toggle to Sonnet 4.5
  "defaultProvider": "anthropic",
  "defaultModel": "claude-opus-4-20250514",
  "defaultThinkingLevel": "medium",

  // Model cycling - Opus default, Sonnet 4.5 for quick toggle (Ctrl+P)
  "enabledModels": [
    "claude-opus-4-*",
    "claude-sonnet-4-5-*",
    "claude-haiku-4-5-*",
    "gemini-2.5-pro*"
  ],

  // UI preferences
  "theme": "dark",
  "quietStartup": false,
  "doubleEscapeAction": "tree",
  "editorPaddingX": 1,

  // Compaction - keep more context for complex tasks
  "compaction": {
    "enabled": true,
    "reserveTokens": 16384,
    "keepRecentTokens": 24000
  },

  // Retry configuration
  "retry": {
    "enabled": true,
    "maxRetries": 3,
    "baseDelayMs": 2000
  },

  // Message delivery - one at a time for control
  "steeringMode": "one-at-a-time",
  "followUpMode": "one-at-a-time",

  // Images
  "images": {
    "autoResize": true,
    "blockImages": false
  },

  // Skills as commands
  "enableSkillCommands": true
}
