# Font Configuration
font-family = JetBrains Mono
font-size = 14

# Theme & Colors
theme = PaleNightHC
window-colorspace = display-p3

# Window Appearance
window-decoration = true
window-theme = auto
window-save-state = never
background-opacity = 0.95
window-padding-x = 8
window-padding-y = 8

# Terminal Behavior
confirm-close-surface = false
shell-integration-features = cursor,sudo,title
desktop-notifications = true
scrollback-limit = 100000
working-directory = follow
copy-on-select = true

# Updates
auto-update = check

# Quick Terminal
quick-terminal-position = top
quick-terminal-autohide = true
quick-terminal-animation-duration = 0.2

# Global quick terminal toggle (requires Accessibility permissions)
keybind = global:cmd+grave_accent=toggle_quick_terminal

# Clipboard
clipboard-read = allow
clipboard-paste-protection = false

# Cursor & Mouse
cursor-style-blink = false
focus-follows-mouse = true
mouse-hide-while-typing = false

# Window Management
quit-after-last-window-closed = true

# GTK Settings (Linux)
gtk-titlebar = false
gtk-tabs-location = bottom
gtk-wide-tabs = true

# macOS Settings
macos-non-native-fullscreen = true
macos-titlebar-style = tabs
macos-option-as-alt = true
macos-auto-secure-input = false

# Custom Keybindings - Tmux-style
# Prefix key simulation using ctrl+c (like tmux)
keybind = ctrl+c>c=new_tab
keybind = ctrl+c>v=new_split:right
keybind = ctrl+c>s=new_split:down

# Vi-style pane navigation with prefix
keybind = ctrl+c>h=goto_split:left
keybind = ctrl+c>j=goto_split:down
keybind = ctrl+c>k=goto_split:up
keybind = ctrl+c>l=goto_split:right

# Window/tab navigation (like tmux)
keybind = ctrl+c>n=next_tab
keybind = ctrl+c>p=previous_tab
keybind = ctrl+c>1=goto_tab:1
keybind = ctrl+c>2=goto_tab:2
keybind = ctrl+c>3=goto_tab:3
keybind = ctrl+c>4=goto_tab:4
keybind = ctrl+c>5=goto_tab:5
keybind = ctrl+c>6=goto_tab:6
keybind = ctrl+c>7=goto_tab:7
keybind = ctrl+c>8=goto_tab:8
keybind = ctrl+c>9=goto_tab:9

# Pane/split management
keybind = ctrl+c>x=close_surface
keybind = ctrl+c>z=toggle_split_zoom
keybind = ctrl+c>o=toggle_split_zoom
keybind = ctrl+c>equal=equalize_splits

# Copy mode (similar to tmux)
keybind = ctrl+c>enter=copy_to_clipboard
keybind = ctrl+c>p=paste_from_clipboard
keybind = ctrl+c>u=copy_url_to_clipboard
keybind = ctrl+c>a=select_all

# Scrolling and navigation
keybind = ctrl+c>page_up=scroll_page_up
keybind = ctrl+c>page_down=scroll_page_down
keybind = ctrl+c>home=scroll_to_top
keybind = ctrl+c>end=scroll_to_bottom

# Tab management enhancements
keybind = ctrl+c>shift+left=move_tab:-1
keybind = ctrl+c>shift+right=move_tab:1
keybind = ctrl+c>w=close_tab

# Direct vim-tmux navigator style (without prefix)
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right

# Additional convenience bindings for resizing
keybind = ctrl+shift+h=resize_split:left,10
keybind = ctrl+shift+j=resize_split:down,10
keybind = ctrl+shift+k=resize_split:up,10
keybind = ctrl+shift+l=resize_split:right,10

# Quick actions
keybind = ctrl+shift+q=close_window
keybind = ctrl+shift+s=close_surface
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
