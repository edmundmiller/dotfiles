# Personal GitHub Configuration
[personal_github] 
service = github
github.login = edmundmiller
github.token = @oracle:eval:op read "op://Private/GitHub Personal Access Token/token"
github.username = edmundmiller
github.description_template = {%% if githubtype == 'pull_request' %%}PR {{githubnamespace}}/{{githubrepo}}: {{githubtitle}}{%% else %%}{{githubnamespace}}/{{githubrepo}}: {{githubtitle}}{%% endif %%}
github.query = assignee:edmundmiller state:open is:issue
github.involved_issues = false
