{
  "name": "jj-workflow-plugin",
  "version": "0.1.0",
  "description": "Autonomous commit stacking and curation workflow for Jujutsu (jj) version control",
  "author": {
    "name": "emiller"
  },
  "keywords": ["jujutsu", "jj", "version-control", "workflow", "commit-stacking"],
  "license": "MIT",
  "commands": "./commands/",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/plan-commit.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git:*)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/git-to-jj-translator.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jj fix -s @ 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/integration-helper.py"
          }
        ]
      }
    ]
  }
}
