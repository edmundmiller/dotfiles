{
  "name": "claude-lint",
  "version": "0.1.0",
  "description": "Real-time validation of Claude Code plugin files using claudelint",
  "author": "Edmund Miller <edmund.a.miller@gmail.com>",
  "hooks": [
    {
      "type": "ToolCallBatch:Callback",
      "matcher": {
        "type": "all",
        "conditions": [
          {
            "type": "toolName",
            "values": ["Write", "Edit"]
          },
          {
            "type": "toolArgPattern",
            "patterns": [
              "config/claude/plugins/.*/plugin\\.json$",
              "config/claude/plugins/.*/commands/.*\\.md$",
              "config/claude/plugins/.*/skills/.*/.*\\.md$",
              "config/claude/plugins/.*/hooks/.*\\.(py|mjs|js|ts)$",
              "config/claude/skills/.*\\.md$"
            ]
          }
        ]
      },
      "command": "../hooks/validate-on-save.py"
    }
  ]
}
